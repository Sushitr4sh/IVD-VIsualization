</script>

<script>
  function showPage(pageId) {
    // Hide all pages
    const pages = document.querySelectorAll(".main > div");
    pages.forEach((page) => {
      page.style.display = "none";
    });

    // Show the selected page
    const selectedPage = document.getElementById(pageId);
    if (selectedPage) {
      selectedPage.style.display = "block";
    }
  }
</script>
